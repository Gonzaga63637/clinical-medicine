    <script>
        // JavaScript for Modal Functionality
        const cvProjectModal = document.getElementById('cvProjectModal');
        const openCvModalBtn = document.getElementById('openCvModal');
        const closeModalBtn = document.getElementById('closeModal');
        const modalTitle = document.getElementById('modalTitle');
        const cvContent = document.getElementById('cvContent');
        const project1Content = document.getElementById('project1Content');
        const project2Content = document.getElementById('project2Content');
        const project3Content = document.getElementById('project3Content');

        // Function to open the modal
        function openModal(contentType, title) {
            // Hide all content sections first
            cvContent.classList.add('hidden');
            project1Content.classList.add('hidden');
            project2Content.classList.add('hidden');
            project3Content.classList.add('hidden');

            // Show the relevant content
            if (contentType === 'cv') {
                cvContent.classList.remove('hidden');
                modalTitle.textContent = 'Full CV';
            } else if (contentType === 'project1') {
                project1Content.classList.remove('hidden');
                modalTitle.textContent = 'Community Health Outreach - Detailed Case Study';
            } else if (contentType === 'project2') {
                project2Content.classList.remove('hidden');
                modalTitle.textContent = 'Clinical Workflow Optimization - Detailed Case Study';
            } else if (contentType === 'project3') {
                project3Content.classList.remove('hidden');
                modalTitle.textContent = 'Patient Care Improvement Project - Detailed Case Study';
            }

            cvProjectModal.classList.remove('hidden');
        }

        // Function to close the modal
        function closeModal() {
            cvProjectModal.classList.add('hidden');
        }

        // Event Listeners
        // Only add event listeners once the DOM is fully loaded to prevent null errors
        document.addEventListener('DOMContentLoaded', (event) => {
            // Re-select elements within this listener to ensure they are available
            const openCvModalBtn = document.getElementById('openCvModal');
            const closeModalBtn = document.getElementById('closeModal');
            const projectButtons = document.querySelectorAll('.open-project-modal');
            const cvProjectModal = document.getElementById('cvProjectModal');
            const cvContent = document.getElementById('cvContent'); // Added to ensure it's selected properly

            if (openCvModalBtn) {
                openCvModalBtn.addEventListener('click', () => openModal('cv'));
            } else {
                console.error("openCvModalBtn not found!");
            }

            if (closeModalBtn) {
                closeModalBtn.addEventListener('click', closeModal);
            } else {
                console.error("closeModalBtn not found!");
            }

            projectButtons.forEach(button => {
                if (button) {
                    button.addEventListener('click', (event) => {
                        const projectId = event.target.dataset.projectId;
                        openModal(projectId);
                    });
                }
            });

            if (cvProjectModal) {
                cvProjectModal.addEventListener('click', (event) => {
                    if (event.target === cvProjectModal) {
                        closeModal();
                    }
                });
            } else {
                console.error("cvProjectModal not found!");
            }

            // Ensure initial state: hide all modal content
            cvContent.classList.add('hidden');
            document.getElementById('project1Content').classList.add('hidden');
            document.getElementById('project2Content').classList.add('hidden');
            document.getElementById('project3Content').classList.add('hidden');
        });
    </script>
</body>
</html>
